@model Comun.Sipro.Dto.SiproProyectoDto

@{
    ViewBag.Title = "Crear Proyecto";
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/assets/personalizado/js/Proyecto.js"></script>
}

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">SIPRO</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "" })">Inicio</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("BandejaProyectos", "Proyecto", new { area = "" })">Regresar a bandeja proyectos</a></li>
        </ol>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h2> Crear Proyecto</h2>
        </div>
        <div class="form-horizontal">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-12" })
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-12" })
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Acronimo, htmlAttributes: new { @class = "control-label col-md-12" })
                        @Html.EditorFor(model => model.Acronimo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Acronimo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <label for="recipient-name" class="col-form-label">Unidad Responsable</label>
                        @Html.DropDownList("Unidades", null, "Seleccione una opción", htmlAttributes: new { @class = "form-control", style = "width: 100%;", required = "required", id = "UnidadesResponsable" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <label for="recipient-name" class="col-form-label">Unidad Solicitante</label>
                        @Html.DropDownList("Unidades", null, "Seleccione una opción" , htmlAttributes: new { @class = "form-control", style = "width: 100%;", required = "required", id = "UnidadesSolicitante" })
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear Proyecto" id="btnCrearProyecto" class="btn btn-success" />
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


